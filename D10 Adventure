#include <stdio.h>

// Defino la salud inicial y el nivel(de momenoto no hay sistema de nivel)
#define Salud_Inicial 100 
#define Nivel_Inicial 1

int main() {
    // Añadido variables, igualo la vida a la salud inicial
    int vida = Salud_Inicial; 
    int danio_entrante;
    int danio_saliente;

    //Datos que añadira el jugador
    int Opcion;
    int Dado;

    printf("Empieza D10 Adventure\n");
    printf("----------------------------------\n");
   
    

    do{ //bucle principal "juego actual"

        printf("Aparece un monstro enfrente tuya \n");
        printf("Atacar = 0 // Huir = 1 \n");
        scanf("%d", &Opcion);
        
        switch (Opcion) { //Meto un switch para las dos opciones
            
            case 0: 
            printf("Atacas al monstruo con tu espada!! \n");
            do{ //bucle en caso de valor incorrecto 
                printf("Lanzamiento del D10:\n");
                scanf("%d", &Dado);
                switch (Dado) { //switch in to switch para definir las opciones de la tirada
                    case 1: case 2: case 3: case 4:
                        printf("Fallaste, el monstruo te ataca \n");
                        break;
    
                    case 5: case 6:  case 7: case 8: case 9: case 10:
                        printf("¡IMPACTO! El monstruo muere \n");
                        break;
                    default: 
                        printf("Valor incorrecto\n");
                        break;
                    
                };
                } while(Dado < 1 || Dado > 10); 
                break;
            
            case 1: 
            printf("Intentas huir \n");
            do{
                printf("Lanzamiento del D10: \n");
                scanf("%d", &Dado);
                switch (Dado) {
                    case 1: case 2: case 3: case 4:
                        printf("Fallaste, el monstruo te ataca \n");
                        break;
    
                    case 5: case 6:  case 7: case 8: case 9: case 10:
                        printf("Sales corriendo \n");
                        break;
                    default: 
                        printf("Valor incorrecto\n");
                        break;
                };
                } while(Dado < 1 || Dado > 10); 
                break;

           
            default: 
                printf("Valor incorrecto\n");
                break;
 
    };
} while(Opcion != 0 && Opcion != 1); 
    
    return 0;
    
}
