#include <stdio.h>

#define Salud_Inicial 100 
#define Nivel_Inicial 1

int main() {

    int vida = Salud_Inicial; 
    int danio_entrante;
    int danio_saliente;

    int Opcion;
    int Dado;

    printf("Empieza D10 Adventure\n");
    printf("----------------------------------\n");
    printf("Aparece un monstruo enfrente tuya \n");
    printf("Atacar = 0 // Huir = 1 \n");
    scanf("%d", &Opcion);

    while (Opcion < 0 || Opcion > 1) {
        printf("Valor incorrecto, introduce 0 o 1:\n");
        scanf("%d", &Opcion);
    }

    switch (Opcion) {

        case 0:
            printf("Atacas al monstruo con tu espada!! \n");
            printf("Lanzamiento del D10:\n");
            scanf("%d", &Dado);

            while (Dado < 1 || Dado > 10) {
                printf("Valor incorrecto, introduce 1-10:\n");
                scanf("%d", &Dado);
            }

            if (Dado <= 4)
                printf("Fallaste, el monstruo te ataca\n");
            else
                printf("¡IMPACTO! El monstruo muere\n");

            break;

        case 1:
            printf("Sales corriendo por tu vida \n");
            printf("Lanzamiento del D10:\n");
            scanf("%d", &Dado);

            while (Dado < 1 || Dado > 10) {
                printf("Valor incorrecto, introduce 1-10:\n");
                scanf("%d", &Dado);
            }

            if (Dado <= 4)
                printf("Fallaste, el monstruo te ataca\n");
            else
                printf("¡Escapas con éxito!\n");

            break;
    }

    return 0;
}
