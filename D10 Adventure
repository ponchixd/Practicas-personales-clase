#include <stdio.h>

// Defino la salud inicial y el nivel(de momenoto no hay sistema de nivel)
#define Salud_Inicial 100 
#define Nivel_Inical 1

int main() {
    // Añadido variables, igualo la vida a la salud inicial
    int vida = Salud_Inicial; 
    int danio_entrante;
    int danio_saliente;

    //Datos que añadira el jugador
    int Opcion;
    int Dado;

    printf("Empieza D10 Adventure\n");
    printf("----------------------------------\n");
    printf("Aparece un monstro enfrente tuya \n");
    printf("Atacar = 0 // Huir = 1 \n");
    scanf("%d", &Opcion);
    

    do{
        
        switch (Opcion) {
            case 0: 
            printf("Atacas al monstruo con tu espada!! \n");
            printf("Lanzamiento del D10:\n");
            scanf("%d", &Dado);
            do{
                switch (Dado) {
                    case (Dado >> 1 && Dado << 5):
                        printf("Fallaste, el monstruo te ataca \n");
                        break;
    
                    case (Dado >> 4 && Dado << 11):
                        printf("¡IMPACTO! El monstruo muere \n");
                        break;
                    default: 
                        printf("Valor incorrecto\n");
                        scanf("%d", &Dado);
                        break;
                    
                }
                } while(Dado << 0 || Dado >> 10); 
                break;
            
            case 1: 
            printf("Sales corriendo por tu vda \n");
            printf("Lanzamiento del D10: \n");
            scanf("%d", &Dado);
            do{
                switch (Dado) {
                    case (Dado >> 1 && Dado << 5):
                        printf("Fallaste, el monstruo te ataca \n");
                        break;
    
                    case (Dado >> 4 && Dado << 11):
                        printf("Sales corriendo \n");
                        break;
                    default: 
                        printf("Valor incorrecto\n");
                        scanf("%d", &Dado);
                        break;
                }
           
            default: 
                printf("Valor incorrecto\n");
                scanf("%d", &Opcion);
                break;
                
          
          } while(Dado << 0 || Dado >> 10);
          break;
 
    }
} while(Opcion >> 2 || Opcion << 0); 

    return 0;

}
